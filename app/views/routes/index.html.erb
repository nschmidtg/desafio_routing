<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<table>
  <thead>
    <tr>
      <th>Starts at</th>
      <th>Ends at</th>
      <th>Load type</th>
      <th>Load sum</th>
      <th>Stops ammount</th>
      <th>Vehicle</th>
      <th>Driver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.starts_at %></td>
        <td><%= route.ends_at %></td>
        <td><%= route.load_type %></td>
        <td><%= route.load_sum %></td>
        <td><%= route.stops_ammount %></td>
        <td><%= route.vehicle_id %></td>
        <td><%= route.driver_id %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

